---
/**
 * About Component
 * About section with highlights, expertise, and contact info
 */

interface Highlight {
  icon: string;
  text: string;
}

interface Props {
  highlights?: Highlight[];
  expertise?: string[];
  email?: string;
  location?: string;
  resumeUrl?: string;
}

const {
  highlights = [
    {
      icon: 'fas fa-rocket',
      text: 'Building <strong>scalable, cloud-native applications</strong> with Spring Boot, NestJS, React, and TypeScript.'
    },
    {
      icon: 'fas fa-code',
      text: 'Designing <strong>RESTful APIs</strong> with <strong>Clean & Hexagonal Architecture</strong>, implementing CI/CD pipelines and microservices.'
    },
    {
      icon: 'fas fa-database',
      text: 'Experienced with <strong>PostgreSQL, MySQL, MongoDB, Redis</strong> for relational and NoSQL solutions.'
    },
    {
      icon: 'fas fa-server',
      text: 'Proficient in message brokers (<strong>RabbitMQ</strong>), containerization (<strong>Docker</strong>), cloud deployment (<strong>Azure</strong>), and familiar with <strong>Laravel</strong>.'
    },
    {
      icon: 'fas fa-graduation-cap',
      text: 'B.Sc. in Software Engineering (2021-2026) at Technical University of Ambato, Ecuador.'
    },
    {
      icon: 'fas fa-lightbulb',
      text: 'Passionate about writing maintainable, high-quality code and solving complex problems.'
    }
  ],
  expertise = [
    'Full-Stack Engineering',
    'Cloud Architecture',
    'Microservices Design',
    'Event-Driven Systems',
    'DevOps & CI/CD',
    'Database Design',
    'RESTful APIs',
    'Clean Code Practices'
  ],
  email = 'davidmanjarres2004@gmail.com',
  location = 'Ambato, Ecuador',
  resumeUrl = `${import.meta.env.BASE_URL}assets/docs/David_Oswaldo_Manjarres_Quintero_FULL.pdf`
} = Astro.props;
---

<section class="about-me" id="about-me">
  <h2>About <span class="enfasis-title">Me</span></h2>
  <h3 class="position" aria-label="Professional Title">
    Full-Stack Developer â€¢ Cloud Engineer â€¢ Ecuador ðŸ‡ªðŸ‡¨
  </h3>

  <div class="about-content">
    {highlights.map(highlight => (
      <div class="about-highlight">
        <i class={highlight.icon}></i>
        <p set:html={highlight.text} />
      </div>
    ))}
  </div>

  <div class="expertise-areas">
    <h4>Areas of Expertise</h4>
    <div class="expertise-tags">
      {expertise.map(area => (
        <span class="tag">{area}</span>
      ))}
    </div>
  </div>

  <div class="contact-info">
    <p>
      <span class="my-contact-email">Email: </span>
      <a href={`mailto:${email}`} class="my-email">{email}</a>
    </p>
    <p><span class="my-contact-place">Place: </span>{location}</p>
    <a
      href={resumeUrl}
      class="resume-button"
      target="_blank"
      rel="noopener noreferrer"
      aria-label="Download my resume as PDF"
    >
      <button class="resume">Download Resume</button>
    </a>
  </div>
</section>
